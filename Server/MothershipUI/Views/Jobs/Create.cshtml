@model MothershipLibrary.Job

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <div class="col-xs-12 text-center">
                <h5><small><i>Add Job</i></small></h5>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
    
          
    
            <div class="form-group">
                <label for="toExecute" class="control-label col-md-4">Execution Time</label>
                <div class="col-md-6">
                    <div class="form-group">                        
                        <div class='input-group date' id='datetimepicker1'>
                            <input name="toExecute" id="toExecute" type='text' class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <script type="text/javascript">
                            $(function () {
                                $('#datetimepicker1').datetimepicker();
                            });
                    </script>
                  
                    <div class="checkbox">
                        <label><input type="checkbox" id="executeImmediately" name="executeImmediately"> Execute immediately <small>(overrides selection)</small></label>
                    </div>
                </div>
                
            </div>
         
    
            <div class="form-group">
                @Html.LabelFor(model => model.Command, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <textarea name="Command" id="Command" class="form-control"></textarea>
                    
                    @Html.ValidationMessageFor(model => model.Command, "", new { @class = "text-danger" })
                </div>
            </div>    
                              
            <input type="hidden" value="@ViewBag.Client" name="Client" id="Client" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Create" class="btn btn-success" onclick="CreateJob()" />
                </div>
            </div>
        </div>
    }
    
</body>
</html>
